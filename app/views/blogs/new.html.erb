<div class="title">
	<body background="/assets/bg8.jpg">
<%= form_for @blog do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title, :placeholder => "Title" %><br>
  <%= f.label :body %>
  <%= f.text_area :body, :placeholder => "Description" %><br>
  <%= f.submit 'Create Blog', :class => "btn btn-primary" %>
<% end %>
</div>
