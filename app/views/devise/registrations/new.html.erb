<div class="signup sign">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :placeholder => "Email" %></div>

  <div><%= f.label :username %><br />
  <%= f.text_field :username, :placeholder => "Username" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :placeholder => "Password-confirmation" %></div>

  <div><%= f.submit "Sign up",:class => "btn btn-success" %></div>
<% end %>

<%= render "links" %>
</div>
